{
  "name": "teknifront",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@ant-design/dark-theme": "^1.0.3",
    "@ant-design/icons": "^4.0.2",
    "@radial-color-picker/react-color-picker": "^1.0.0",
    "antd": "^4.0.1",
    "babel-plugin-import": "^1.13.0",
    "color-convert": "^2.0.1",
    "customize-cra": "^0.9.1",
    "less": "^3.11.1",
    "less-loader": "^5.0.0",
    "mqtt": "^3.0.0",
    "react": "^16.13.0",
    "react-app-rewired": "^2.1.5",
    "react-detect-offline": "^2.4.0",
    "react-dom": "^16.13.0",
    "react-scripts": "^3.4.0",
    "typescript": "^3.8.2"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "lint": "prettier -c src/**/*.ts -c src/**/*.tsx -c src/**/*.css",
    "coverage": "codecov"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/react": "^9.5.0",
    "@types/color-convert": "^1.9.0",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.1",
    "@types/react": "^16.9.24",
    "@types/react-dom": "^16.9.5",
    "codecov": "^3.6.5",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "src/**/*.ts",
      "src/**/*.tsx",
      "!src/serviceWorker.ts"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 110
  },
  "lint-staged": {
    "*.{js,ts,tsx,css}": [
      "prettier --write src/**/*.(js|ts|tsx|css)",
      "git add"
    ]
  }
}
